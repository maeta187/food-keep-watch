		"react-native-safe-area-context": "^5.6.1",
		"react-native-screens": "~4.16.0",
		"react-native-worklets": "~0.5.1",
		"tailwindcss": "^3.4.17"
	},
	"devDependencies": {
		"@types/react": "~19.1.0",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "8.57.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-config-universe": "^15.0.3",
		"eslint-plugin-react-hooks": "^6.1.1",
		"eslint-plugin-react-native": "^5.0.0",
		"eslint-plugin-tailwindcss": "^3.18.2",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.3",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"typescript": "~5.9.2",
		"vitest": "^1.6.0"
	},
	"private": true,
	"scripts": {
		"start": "bunx expo start",
		"start:dev-client": "bunx expo start --dev-client",
		"android": "bunx expo run:android",
		"ios": "bunx expo run:ios",
		"web": "bunx expo start --web",
		"lint": "bunx eslint . --ext ts,tsx --max-warnings=0",
		"lint:fix": "bunx eslint . --ext ts,tsx --fix",
		"format": "bunx prettier --write .",
		"format:check": "bunx prettier --check .",
		"test": "bunx vitest run",
		"test:coverage": "bunx vitest run --coverage",
		"test:watch": "bunx vitest",
		"prepare": "husky"
	},
	"volta": {
		"node": "22.20.0"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx}": [
			"eslint --max-warnings=0",
			"prettier --check"
		],
		"*.{json,css,md}": "prettier --check"
	}
